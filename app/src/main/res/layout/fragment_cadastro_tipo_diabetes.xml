<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.CadastroTipoDiabetesFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextoCadastro"
            android:layout_marginTop="60dp"
            android:text="Qual o tipo da sua diabete?"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11">

            <RadioButton
                android:id="@+id/rdbPrediabetes"
                style="@style/rdbDiabetes"
                android:layout_marginTop="10dp"
                android:text="@string/pre_diabetes" />

            <RadioButton
                android:id="@+id/rdbTipo1"
                style="@style/rdbDiabetes"
                android:text="@string/tipo1" />

            <RadioButton
                android:id="@+id/rdbTipo2"
                style="@style/rdbDiabetes"
                android:text="@string/tipo2" />

            <RadioButton
                android:id="@+id/rdbGest"
                style="@style/rdbDiabetes"
                android:text="@string/gestacional" />


        </RadioGroup>

        <Button
            android:id="@+id/btnPronto02"
            style="@style/BtnProntoCadastro"
            android:layout_marginTop="40dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>