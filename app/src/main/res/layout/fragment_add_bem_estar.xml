<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/waves"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_copo"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@id/linearLayout5"
            app:layout_constraintStart_toStartOf="@id/linearLayout5"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:paddingBottom="12dp"
                android:text="Deslize daqui para baixo para sair."
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnInsulinaDia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:fontFamily="@font/roboto"
                android:text="Hoje"
                android:textAllCaps="false"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text='Selecione o dia clicando em "hoje".' />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="550dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/linearLayout2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="40dp"
                            android:layout_marginRight="50dp"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/linearLayout6">


                            <RadioButton
                                android:id="@+id/btnAddHumorBem"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/btn_add_alimentos"
                                android:drawableTop="@drawable/happy"
                                android:button="@android:color/transparent"
                                android:gravity="center"
                                android:paddingLeft="40dp"
                                android:paddingTop="8dp"
                                android:paddingRight="40dp"
                                android:paddingBottom="8dp"
                                android:text="Feliz"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                            <RadioButton
                                android:id="@+id/btnAddHumorNormal"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/btn_add_alimentos"
                                android:drawableTop="@drawable/normal"
                                android:button="@android:color/transparent"
                                android:gravity="center"
                                android:paddingLeft="40dp"
                                android:paddingTop="8dp"
                                android:paddingRight="40dp"
                                android:paddingBottom="8dp"
                                android:text="Normal"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                            <RadioButton
                                android:id="@+id/btnAddHumorSad"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="50dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/btn_add_alimentos"
                                android:drawableTop="@drawable/sad"
                                android:button="@android:color/transparent"
                                android:gravity="center"
                                android:paddingLeft="40dp"
                                android:paddingTop="8dp"
                                android:paddingRight="40dp"
                                android:paddingBottom="8dp"
                                android:text="Triste"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                            <RadioButton
                                android:id="@+id/btnAddHumorBrabo"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/btn_add_alimentos"
                                android:drawableTop="@drawable/bravo"
                                android:button="@android:color/transparent"
                                android:gravity="center"
                                android:paddingLeft="40dp"
                                android:paddingTop="8dp"
                                android:paddingRight="40dp"
                                android:paddingBottom="8dp"
                                android:text="Bravo"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />




                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="50dp"
                            android:paddingBottom="10dp"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/linearLayout6">


                            <RadioButton
                                android:id="@+id/btnAddHumorStress"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/btn_add_alimentos"
                                android:drawableTop="@drawable/estresse"
                                android:button="@android:color/transparent"
                                android:gravity="center"
                                android:paddingLeft="40dp"
                                android:paddingTop="8dp"
                                android:paddingRight="40dp"
                                android:paddingBottom="8dp"
                                android:text="Estresse"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                            <RadioButton
                                android:id="@+id/btnAddHumorRelax"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/btn_add_alimentos"
                                android:drawableTop="@drawable/relaxado"
                                android:button="@android:color/transparent"
                                android:gravity="center"
                                android:paddingLeft="40dp"
                                android:paddingTop="8dp"
                                android:paddingRight="40dp"
                                android:paddingBottom="8dp"
                                android:text="Relaxado"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                            <RadioButton
                                android:id="@+id/btnAddHumorAnim"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="50dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/btn_add_alimentos"
                                android:drawableTop="@drawable/animado"
                                android:button="@android:color/transparent"
                                android:gravity="center"
                                android:paddingLeft="40dp"
                                android:paddingTop="8dp"
                                android:paddingRight="39dp"
                                android:paddingBottom="8dp"
                                android:text="Animado"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                            <RadioButton
                                android:id="@+id/btnAddHumorCansado"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/btn_add_alimentos"
                                android:drawableTop="@drawable/dormindinho"
                                android:button="@android:color/transparent"
                                android:gravity="center"
                                android:paddingLeft="40dp"
                                android:paddingTop="8dp"
                                android:paddingRight="40dp"
                                android:paddingBottom="8dp"
                                android:text="Cansado"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />


                        </LinearLayout>


                    </LinearLayout>


                </HorizontalScrollView>


                <EditText
                    android:id="@+id/editTextDescriçãoHumor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/edt_geral_borda_branca"
                    android:ems="10"
                    android:gravity="start|top"
                    android:hint="Descreva como foi seu humor"
                    android:inputType="textMultiLine"
                    android:maxLines="3"
                    android:paddingLeft="10dp"
                    android:paddingTop="3dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout12" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sintomas"
                        android:gravity="center"
                        android:textSize="28sp"
                        android:textColor="#000"
                        android:fontFamily="@font/roboto"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">



                        <CheckBox android:id="@+id/checkFraqueza"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:button="@null"
                            android:drawableTop="@drawable/fraqueza"
                            android:text="Fraqueza"
                            android:gravity="center"
                            android:layout_margin="4dp"/>
                        <CheckBox android:id="@+id/checkVomito"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:button="@null"
                            android:drawableTop="@drawable/vomito"
                            android:text="Náuseas"
                            android:gravity="center"
                            android:layout_margin="4dp"/>

                        <CheckBox
                            android:id="@+id/checkRins"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:button="@null"
                            android:drawableTop="@drawable/rins"
                            android:text="Dores nos\nrins"
                            android:gravity="center"
                            android:layout_margin="4dp"/>
                        <CheckBox
                            android:id="@+id/checkBipolar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:button="@null"
                            android:drawableTop="@drawable/bipolar"
                            android:text="Mudança de\nhumor"
                            android:gravity="center"
                            android:layout_margin="4dp"/>
                    </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">
                    <CheckBox
                        android:id="@+id/checkPPeso"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:drawableTop="@drawable/peso"
                        android:text="Perda de\npeso"
                        android:gravity="center"
                        android:layout_margin="4dp"
                        />
                    <CheckBox
                        android:id="@+id/checkPezinho"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:drawableTop="@drawable/pezinho"
                        android:text="Formigamento"
                        android:gravity="center"
                        android:layout_margin="4dp"/>
                    <CheckBox
                        android:id="@+id/checkFome"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:drawableTop="@drawable/fome"
                        android:text="Fome"
                        android:gravity="center"
                        android:layout_margin="4dp"/>
                    <CheckBox
                        android:id="@+id/checkCoceira"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:drawableTop="@drawable/handzinha"
                        android:text="Coceira"
                        android:gravity="center"
                        android:layout_margin="4dp"/>



                </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <CheckBox
                    android:id="@+id/checkVisao"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:drawableTop="@drawable/visao"
                    android:text="Visão\nembaçada"
                    android:gravity="center"
                    android:layout_margin="4dp"/>
                <CheckBox
                    android:id="@+id/checkFadiga"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:drawableTop="@drawable/fadiga"
                    android:text="Fadiga"
                    android:gravity="center"
                    android:layout_margin="4dp"/>
                <CheckBox
                    android:id="@+id/checkUrina"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:drawableTop="@drawable/xixi"
                    android:text="Urinar\nvárias vezes"
                    android:gravity="center"
                    android:layout_margin="4dp"/>
                <CheckBox
                    android:id="@+id/checkCabeca"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:drawableTop="@drawable/cabeca"
                    android:text="Dor de\ncabeça"
                    android:gravity="center"
                    android:layout_margin="4dp"/>

            </LinearLayout>
            </LinearLayout>

        </ScrollView>




        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/linearLayout11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@id/Layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageButton
                    android:id="@+id/btnTerminar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="56dp"
                    android:background="#00FFFFFF"
                    android:src="@mipmap/ic_check_foreground" />

                <TextView
                    android:id="@+id/textView19"
                    style="@style/Widget.AppCompat.TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Bem-estar"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btnProximo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="56dp"
                    android:background="#00FFFFFF"
                    android:src="@mipmap/ic_setalado_foreground" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>