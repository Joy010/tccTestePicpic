<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="408dp"
        android:layout_height="331dp"
        android:layout_marginBottom="37dp"
        android:background="@drawable/waves"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="346dp"
        android:layout_height="715dp"
        android:background="@drawable/bg_copo"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtDeslize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Deslize para baixo para sair "
            android:textColor="#6247AA"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:clickable="true" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Refeição "
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="372dp"
            android:layout_height="110dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="176dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cbCafeMan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Café da Manhã "
                    android:textColor="#6247AA"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/cbLancheMan"
                    android:layout_width="188dp"
                    android:layout_height="wrap_content"
                    android:text="Lanche da Manhã"
                    android:textColor="#6247AA"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/cbAlmoco"
                    android:layout_width="188dp"
                    android:layout_height="wrap_content"
                    android:text="Almoço"
                    android:textColor="#6247AA"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="188dp"
                android:layout_height="106dp"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cbLancheTar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lanhce da Tarde"
                    android:textColor="#6247AA"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/cbJanta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Janta"
                    android:textColor="#6247AA"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/cbCeia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ceia"
                    android:textColor="#6247AA"
                    android:textSize="18dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtDescAlimentacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center"
                android:hint="Descreva o que você comeu "
                android:inputType="textPersonName"
                android:textColorHint="#7A000000" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alimento e Quantidade"
                android:textColor="#6247AA"
                android:textSize="18sp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="318dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnCheck"
                android:layout_width="89dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                app:srcCompat="@mipmap/ic_check_foreground" />

            <TextView
                android:id="@+id/txtGlicemia"
                android:layout_width="177dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Alimentação"
                android:textColor="#6247AA"
                android:textSize="30dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnNext"
                android:layout_width="65dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                app:srcCompat="@mipmap/ic_setalado_foreground" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="23dp" />

        <ImageButton
            android:id="@+id/btnBolinhasPassar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/ic_elipsestelaintro2" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>